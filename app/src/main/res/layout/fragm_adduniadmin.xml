<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnScanUniAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCAN QRCODE"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:hint="userID" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="122dp"
        android:hint="userName"
        android:layout_below="@+id/btnScanUniAdmin"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtEmployeeID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="employeeID"
        android:layout_below="@+id/txtUserID"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnAddUniAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtUserID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="ADD UNI ADMIN" />

</RelativeLayout>